<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/frameLayoutOne"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#000"
        >
        <ImageView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fanhui"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:elevation="1dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/video_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频加载中..."
            android:textSize="20sp"
            android:textColor="#fff"
            android:elevation="1dp"
            android:layout_gravity="center"
            android:background="#000"
            />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fangda"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/suoxiao"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/snapshot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/zhuap"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/full_screen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/quanpin"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_ptz_control2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ptz_control"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_ptz_up2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_ptz_left2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null" />

            <ImageButton
                android:id="@+id/btn_ptz_flip2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/selector_ptz_turn"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/btn_ptz_right2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_ptz_down2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/last_end"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/high_definition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:background="@drawable/p5_raduis"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="高清"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/play_pause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/p5_raduis"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="暂停"
            android:textSize="19sp" />
        <LinearLayout
            android:id="@+id/play_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/btn_ptz_down22"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_play"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回看"
                android:textColor="#000"
                android:textSize="19sp"
                android:layout_marginLeft="2dp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>